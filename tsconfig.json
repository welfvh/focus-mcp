{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "out/main",
    "rootDir": "src/main",
    "declaration": false,
    "resolveJsonModule": true
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "out", "dist"]
}
